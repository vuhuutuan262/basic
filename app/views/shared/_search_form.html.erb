<div class="row">
<div class="col-md-4">
  <%= search_form_for search.q_params, remote: true, class: "form-search margin-center" do |f| %>
    <div style="display: flex">
      <%= f.search_field :name_cont, class: "form-control", placeholder: "Tìm kiếm theo tên" %>
      <%= button_tag(type: "submit", class: "btn-primary") do %>
        <i class="fa fa-search"></i>
      <% end %>
    </div>
  <% end %>
</div>
</div>
